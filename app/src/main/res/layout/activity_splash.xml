<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"

    android:orientation="vertical">


    <LinearLayout
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView

            android:padding="@dimen/_15sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_first_logo" />
        <View

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView
            android:padding="@dimen/_15sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_sec_logo" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
android:padding="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:textSize = "@dimen/_25sdp"
        android:textStyle="bold"
        android:textColor="#B53107"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="वरिष्ठ शास्त्रज्ञ व प्रमुख" />

        <TextView
            android:textSize = "@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/primary_app_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="शबरी कृषि प्रतिष्ठान संचलित\nकृषि विज्ञान केंद्र, सोलापूर. " />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize = "@dimen/_14sdp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Visit us at : www.kvksolapur.org" />

    </LinearLayout>

</LinearLayout>